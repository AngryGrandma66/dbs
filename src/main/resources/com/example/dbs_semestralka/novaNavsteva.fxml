<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.dbs_semestralka.controllers.NovaNavstevaController"
          hgap="10" vgap="10" alignment="CENTER">
    <Label text="Pacient ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="pacientIdField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Datum návštěvy:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <DatePicker fx:id="datumNavstevyPicker" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Typ návštěvy:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="typNavstevyField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Lékařská zpráva:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextArea fx:id="zpravaArea" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Button text="Vytvořit návštěvu"
            onAction="#handleNovaNavsteva"
            GridPane.rowIndex="4" GridPane.columnIndex="1"/>
</GridPane>
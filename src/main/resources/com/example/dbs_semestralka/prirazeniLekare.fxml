<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.dbs_semestralka.controllers.PrirazeniLekareController"
          hgap="10" vgap="10" alignment="CENTER">
    <Label text="ID návštěvy:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="navstevaIdField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="ID lékaře:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="lekarIdField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Button text="Přiřadit lékaře"
            onAction="#handlePrirazeniLekare"
            GridPane.rowIndex="2" GridPane.columnIndex="1"/>
</GridPane>
